{
	"$schema": "https://biomejs.dev/schemas/1.6.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"files": {
		"include": ["**/*.ts", "**/*.css", "**/*.vue", "**/*.json", "**/*.md"],
		"ignore": ["public/*", "node_modules/*"]
	}
}
